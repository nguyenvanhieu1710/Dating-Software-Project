# ========================================
# DATING SOFTWARE - BACKEND ENVIRONMENT
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=5001
HOST=localhost

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dating_software
DB_USER=postgres
DB_PASSWORD=12345678
DB_URL=postgresql://postgres:12345678@localhost:5432/dating_software

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# SOCKET.IO CONFIGURATION
# ========================================
SOCKET_CORS_ORIGIN=http://localhost:5001
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000
SOCKET_MAX_HTTP_BUFFER_SIZE=1e6

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
APP_NAME=Dating App

# ========================================
# SECURITY CONFIGURATION
# ========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=*
corsOrigin=*
CORS_CREDENTIALS=true

# ========================================
# FRONTEND URLs
# ========================================
FRONTEND_URL=http://localhost:3000
MOBILE_APP_URL=http://localhost:8081
ADMIN_FRONTEND_URL=http://localhost:8082